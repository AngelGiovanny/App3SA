<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App3SA.MainPage">

    <StackLayout>
        <Frame BackgroundColor="LightGray" Padding="20" CornerRadius="0">
            <Label Text="Welcome to Xamarin.Forms!" HorizontalTextAlignment="Center" TextColor="White" FontSize="18"/>
        </Frame>

        <Entry x:Name="txtUsuario" Placeholder="Ingrese su Usuario"/>
        <Entry x:Name="txtClave" Placeholder="Ingrese la Clave" IsPassword="True"/>

        <Button x:Name="btnAbrir" Text="Abrir Ventana dos" Clicked="btnAbrir_Clicked"/>
        
    </StackLayout>

</ContentPage>
